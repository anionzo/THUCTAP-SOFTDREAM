@model IEnumerable<StudentManagement.Models.CoursesRegistered>

@{
    ViewBag.Title = "ShowSubjectBySemester";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách môn học theo học kì</h2>


<table class="table table-hover">
    <thead class="table-info">
        <tr>
            <th >STT</th>
            <th>
                @Html.DisplayNameFor(model => model.IDSemester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameSemester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
@{ 
    int i = 0;
}
@foreach (var item in Model) {
    <tbody>
        <tr>
            <th>
                @{ i++;}
                @i
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.IDSemester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameSemester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
            </td>
        </tr>
    </tbody>
}

</table>
