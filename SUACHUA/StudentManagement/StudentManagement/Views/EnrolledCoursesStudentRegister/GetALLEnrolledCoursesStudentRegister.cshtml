@model IEnumerable<StudentManagement.Models.EnrolledCoursesStudentRegister>

<div class="row">
    <div class="col-8">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MSSV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IDEnrolledCourses)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseWorkScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExamScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalScore)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                bool result = true;
                if (item.TotalScore == 0 && item.CourseWorkScore == 0 && item.ExamScore == 0) {
                    result = false;
                }

                else if(item.TotalScore == 0 && (item.CourseWorkScore == 0 ||  item.ExamScore == 0))
                {
                    result = false;
                }


                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MSSV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDEnrolledCourses)
                    </td>
                    <td>
                        @(result == false && item.CourseWorkScore == 0 ? "-" :item.CourseWorkScore )
                    </td>
                    <td>
                        @(result == false && item.ExamScore == 0 ? "-" : item.ExamScore )
                    </td>
                    <td>
                        @(result == false && item.TotalScore == 0 ? "-" : item.TotalScore )
                    </td>
                    <td>
                        <div class="btn btn-outline-info btn-edit-score" data-enrolled-id="@item.IDEnrolledCourses" data-mssv-id="@item.MSSV">
                            <i class="fa-solid fa-pen-nib"></i>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-4">
        <div id="edit-score">
        </div>
    </div>
</div>
